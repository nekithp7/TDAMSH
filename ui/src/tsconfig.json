{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "lib": [
      "ES5",
      "ES2015",
      "DOM",
      "ScriptHost"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/"
    ],
    "types": [
      "jasmine",
      "jquery",
      "lodash",
      "node"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "./node_modules",
    "dist",
    "**/*-aot.ts",
    "**/*.spec.ts"
  ]
}
